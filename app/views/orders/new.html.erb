<%= form_with model: @order do |f| %>
  <div class="container">
    <ul class="row">
      <li><%= f.label :girl_name %></li>
      <li><%= f.text_field :girl_name %></li>
    </ul>

    <ul class="row">
      <li><%= label_tag %></li>
      <li>In-person</li>
      <li>Online</li>
    </ul>

    <% Order::COOKIE_TYPES.each do |type| %>
      <ul class="row cookie-<%= type %>">
        <li><%= f.label type %></li>
        <li><%= f.number_field type %></li>
        <li><%= f.number_field type %></li>
      </ul>
    <% end %>

    <ul class="row">
      <li><%= f.submit %></li>
    </ul>
  </div>
<% end %>